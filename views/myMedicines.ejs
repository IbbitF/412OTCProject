<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>My Medicines</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="dashboard">
      <!-- Sidebar -->
      <aside class="sidebar">
        <h2>Medicine Tracker</h2>
        <nav>
          <a href="/dashboard?user=<%= userId %>">Dashboard</a>
          <a href="/browse?user=<%= userId %>">Browse Medicines</a>
          <a href="/my-medicine?user=<%= userId %>" class="active"
            >My Medicines</a
          >
          <a href="/add-medicine?user=<%= userId %>">Add Medicine</a>
          <a href="/">Logout</a>
        </nav>
      </aside>

      <!-- Main content -->
      <main class="main-content">
        <h1>My medicines</h1>

        <!-- Filters -->
        <form class="filter-bar" method="GET" action="/my-medicine">
          <input type="hidden" name="user" value="<%= userId %>" />
          <div class="filter-box">
            <select name="brand">
            <option value="">Any brand</option>
            <option value="Tylenol" <%= brand === "Tylenol" ? "selected" : "" %>>
              Tylenol
            </option>
            <option value="Robitussin" <%= brand === "Robitussin" ? "selected" : "" %>>
              Robitussin
            </option>
            <option value="Imodium" <%= brand === "Imodium" ? "selected" : "" %>>
              Imodium
            </option>
            <option value="Advil" <%= brand === "Advil" ? "selected" : "" %>>
              Advil
            </option>
            <option value="Claritin" <%= brand === "Claritin" ? "selected" : "" %>>
              Claritin
            </option>
          </select>
        </div>

          <div class="filter-box">
            <label>Type</label>
            <select name="type">
              <option value="">Any type</option>

              <option value="Pain Reliever" <%= type === "Pain Reliever" ? "selected" : "" %>>
                Pain Reliever
              </option>

              <option value="Cough" <%= type === "Cough" ? "selected" : "" %>>
                Cough Suppressant
              </option>

              <option value="Anti-Diarrheal" <%= type === "Anti-Diarrheal" ? "selected" : "" %>>
                Anti-Diarrheal
              </option>

              <option value="Antihistamine" <%= type === "Antihistamine" ? "selected" : "" %>>
                Antihistamine
              </option>
            </select>
          </div>

          <div class="filter-box">
            <label>Dosage</label>
              <select name="dosage">
                <option value="">Any dosage</option>

                <option value="Tablet" <%= dosage === "Tablet" ? "selected" : "" %>>
                  Tablet
                </option>

                <option value="Syrup" <%= dosage === "Syrup" ? "selected" : "" %>>
                  Syrup
                </option>

                <option value="Capsule" <%= dosage === "Capsule" ? "selected" : "" %>>
                  Capsule
                </option>

                <option value="Liquid" <%= dosage === "Liquid" ? "selected" : "" %>>
                  Liquid
                </option>
            </select>
          </div>

          <button class="apply-btn" type="submit">Apply</button>
        </form>

        <!-- Table -->
        <table class="med-table">
          <thead>
            <tr>
              <th>Medicine</th>
              <th>Brand</th>
              <th>Type</th>
              <th>Dosage</th>
              <th>Notes</th>
            </tr>
          </thead>

          <tbody>
            <% medicines.forEach(med => { %>
            <tr>
              <td><%= med.med_name %></td>
              <td><%= med.brand_name %></td>
              <td><%= med.type %></td>
              <td><%= med.dosageform %></td>
              <td><%= med.notes %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </main>
    </div>

    <script>
    </script>
  </body>
</html>
