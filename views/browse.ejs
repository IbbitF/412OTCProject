<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Browse Medicines</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="dashboard">
      <!-- Sidebar -->
      <aside class="sidebar">
        <h2>Medicine Tracker</h2>
        <nav>
          <a href="/dashboard?user=<%= userId %>">Dashboard</a>
          <a href="/browse?user=<%= userId %>" class="active"
            >Browse Medicines</a
          >
          <a href="/my-medicine?user=<%= userId %>">My Medicines</a>
          <a href="/">Logout</a>
        </nav>
      </aside>

      <!-- Main content -->
      <main class="main-content">
        <h1>Browse medicines</h1>

        <!-- Filter bar -->
         <!--i hardcoded all these filters bruh idc LOL if i made a real website ill do sumn ab it-->
        <form class="filter-bar" method="GET" action="/browse">
          <input type="hidden" name="user" value="<%= userId %>" />
          <div class="filter-box">
            <label>Search</label>
            <input
              type="text"
              name="search"
              placeholder="Type a medicine nameâ€¦"
              value="<%= search || '' %>"
            />
          </div>

          <div class="filter-box">
            <label>Brand</label>
            <select name="brand">
              <option value="">Any brand</option>

              <option value="Tylenol" <%= brand === "Tylenol" ? "selected" : "" %>>Tylenol</option>
              <option value="Advil" <%= brand === "Advil" ? "selected" : "" %>>Advil</option>
              <option value="Aleve" <%= brand === "Aleve" ? "selected" : "" %>>Aleve</option>
              <option value="Claritin" <%= brand === "Claritin" ? "selected" : "" %>>Claritin</option>
              <option value="Zyrtec" <%= brand === "Zyrtec" ? "selected" : "" %>>Zyrtec</option>
              <option value="Benadryl" <%= brand === "Benadryl" ? "selected" : "" %>>Benadryl</option>
              <option value="Pepto-Bismol" <%= brand === "Pepto-Bismol" ? "selected" : "" %>>Pepto-Bismol</option>
              <option value="Tums" <%= brand === "Tums" ? "selected" : "" %>>Tums</option>
              <option value="Imodium" <%= brand === "Imodium" ? "selected" : "" %>>Imodium</option>
              <option value="Mucinex" <%= brand === "Mucinex" ? "selected" : "" %>>Mucinex</option>
              <option value="Robitussin" <%= brand === "Robitussin" ? "selected" : "" %>>Robitussin</option>
              <option value="DayQuil" <%= brand === "DayQuil" ? "selected" : "" %>>DayQuil</option>
              <option value="NyQuil" <%= brand === "NyQuil" ? "selected" : "" %>>NyQuil</option>
            </select>
          </div>

          <div class="filter-box">
            <label>Type</label>
            <select name="type">
              <option value="">Any type</option>

              <option value="Pain Reliever" <%= type === "Pain Reliever" ? "selected" : "" %>>
                Pain Reliever
              </option>

              <option value="Antihistamine" <%= type === "Antihistamine" ? "selected" : "" %>>
                Antihistamine
              </option>

              <option value="Cold/Flu" <%= type === "Cold/Flu" ? "selected" : "" %>>
                Cold & Flu Relief
              </option>

                  <option value="Cough" <%= type === "Cough" ? "selected" : "" %>>
                  Cough Suppressant
                </option>

                <option value="Digestive" <%= type === "Digestive" ? "selected" : "" %>>
                  Digestive Relief
                </option>

                <option value="Antacid" <%= type === "Antacid" ? "selected" : "" %>>
                  Antacid
                </option>
            </select>
          </div>
          <button class="apply-btn" type="submit">Apply</button>
        </form>

        <!-- Table -->
        <div class="table-wrapper">
          <table class="med-table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Brand</th>
                <th>Type</th>
                <th>Action</th>
              </tr>
            </thead>

            <tbody id="medicineTable">
              <% medicines.forEach(med => { %>
              <tr>
                <td><%= med.med_name %></td>
                <td><%= med.brand_name %></td>
                <td><%= med.type %></td>
                <td>
                  <button
                    class="save-btn"
                    onclick="location.href='/add-medicine?med=<%= med.id %>&user=<%= userId %>'"
                  >
                    Save to my list
                  </button>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </main>
    </div>

    <script>
    </script>
  </body>
</html>
