<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Browse Medicines</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="dashboard">
      <!-- Sidebar -->
      <aside class="sidebar">
        <h2>Medicine Tracker</h2>
        <nav>
          <a href="/dashboard?user=<%= userId %>">Dashboard</a>
          <a href="/browse?user=<%= userId %>" class="active"
            >Browse Medicines</a
          >
          <a href="/my-medicine?user=<%= userId %>">My Medicines</a>
          <a href="/add-medicine?user=<%= userId %>">Add Medicine</a>
          <a href="/">Logout</a>
        </nav>
      </aside>

      <!-- Main content -->
      <main class="main-content">
        <h1>Browse medicines</h1>

        <!-- Filter bar -->
        <form class="filter-bar" method="GET" action="/browse">
          <input type="hidden" name="user" value="<%= userId %>" />
          <div class="filter-box">
            <label>Search</label>
            <input
              type="text"
              name="search"
              placeholder="Type a medicine name…"
              value="<%= search || '' %>"
            />
          </div>

          <div class="filter-box">
            <label>Brand</label>
            <select name="brand">
              <option value="">Any brand</option>

              <option value="Tylenol" <%= brand === "Tylenol" ? "selected" : "" %>>
                Tylenol
              </option>

              <option value="Claritin" <%= brand === "Claritin" ? "selected" : "" %>>
                Claritin
              </option>

              <option value="Imodium" <%= brand === "Imodium" ? "selected" : "" %>>
                Imodium
              </option>

              <option value="Advil" <%= brand === "Advil" ? "selected" : "" %>>
                Advil
              </option>

              <option value="Zyrtec" <%= brand === "Zyrtec" ? "selected" : "" %>>
                Zyrtec
              </option>
            </select>
          </div>

          <div class="filter-box">
            <label>Type</label>
            <select name="type">
              <option value="">Any type</option>

              <option value="Pain Reliever" <%= type === "Pain Reliever" ? "selected" : "" %>>
                Pain Reliever
              </option>

              <option value="Antihistamine" <%= type === "Antihistamine" ? "selected" : "" %>>
                Antihistamine
              </option>

              <option value="Cold/Flu" <%= type === "Cold/Flu" ? "selected" : "" %>>
                Cold & Flu Relief
              </option>
            </select>
          </div>
          <button class="apply-btn" type="submit">Apply</button>
        </form>

        <!-- Table -->
        <div class="table-wrapper">
          <table class="med-table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Brand</th>
                <th>Type</th>
                <th>Dosage</th>
                <th>Action</th>
              </tr>
            </thead>

            <tbody id="medicineTable">
              <% medicines.forEach(med => { %>
              <tr>
                <td><%= med.med_name %></td>
                <td><%= med.brand_name %></td>
                <td><%= med.type %></td>
                <td>—</td>
                <td>
                  <button
                    class="save-btn"
                    onclick="location.href='/add-medicine?med=<%= med.id %>&user=<%= userId %>'"
                  >
                    Save to my list
                  </button>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </main>
    </div>

    <script>
    </script>
  </body>
</html>
