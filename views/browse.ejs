<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Browse Medicines</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="dashboard">
      <!-- Sidebar -->
      <aside class="sidebar">
        <h2>Medicine Tracker</h2>
        <nav>
          <a href="/dashboard?user=<%= userId %>">Dashboard</a>
          <a href="/browse?user=<%= userId %>" class="active"
            >Browse Medicines</a
          >
          <a href="/my-medicine?user=<%= userId %>">My Medicines</a>
          <a href="/add-medicine?user=<%= userId %>">Add Medicine</a>
          <a href="/">Logout</a>
        </nav>
      </aside>

      <!-- Main content -->
      <main class="main-content">
        <h1>Browse medicines</h1>

        <!-- Filter bar -->
        <div class="filter-bar">
          <div class="filter-box">
            <label>Search</label>
            <input
              type="text"
              id="searchInput"
              placeholder="Type a medicine name…"
            />
          </div>

          <div class="filter-box">
            <label>Brand</label>
            <select id="brandSelect">
              <option>Any brand</option>
              <option>Tylenol</option>
              <option>Claritin</option>
              <option>Imodium</option>
            </select>
          </div>

          <div class="filter-box">
            <label>Type</label>
            <select id="typeSelect">
              <option>Any type</option>
              <option>Pain Reliever</option>
              <option>Antihistamine</option>
              <option>Anti-Diarrheal</option>
            </select>
          </div>

          <div class="filter-box">
            <label>Dosage</label>
            <select id="dosageSelect">
              <option>Any dosage</option>
              <option>Tablet</option>
              <option>Capsule</option>
              <option>Liquid</option>
            </select>
          </div>

          <button class="apply-btn">Apply</button>
        </div>

        <!-- Table -->
        <div class="table-wrapper">
          <table class="med-table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Brand</th>
                <th>Type</th>
                <th>Dosage</th>
                <th>Action</th>
              </tr>
            </thead>

            <tbody id="medicineTable">
              <% medicines.forEach(med => { %>
              <tr>
                <td><%= med.med_name %></td>
                <td><%= med.brand_name %></td>
                <td><%= med.type %></td>
                <td>—</td>
                <td>
                  <button
                    class="save-btn"
                    onclick="location.href='/add-medicine?med=<%= med.id %>&user=<%= userId %>'"
                  >
                    Save to my list
                  </button>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </main>
    </div>

    <script>
      // simple demo
      document.querySelector(".apply-btn").addEventListener("click", () => {
        alert("Filters applied! (frontend only)");
      });
    </script>
  </body>
</html>
